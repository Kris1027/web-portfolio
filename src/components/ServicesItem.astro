---
const { image, title, items } = Astro.props;
---

<li
    class='flex flex-col lg:flex-row lg:gap-10 justify-start md:justify-center items-center py-10 px-4 text-center lg:text-start text-white [&:nth-child(even)]:lg:flex-row-reverse [&:nth-child(even)]:lg:text-end'
>
    <img class='py-5 w-72 md:w-1/2 lg:w-1/3' src={image} alt={title} />
    <div>
        <h2
            class='font-semibold text-md sm:text-lg md:text-xl lg:text-2xl text-shadow-xl uppercase'
        >
            {title}
        </h2>
        <ul>
            {
                items.map((item: string) => (
                    <li class='text-[0.6rem] sm:text-base md:text-md lg:text-lg text-shadow-xl'>
                        {item}
                    </li>
                ))
            }
        </ul>
    </div>
</li>

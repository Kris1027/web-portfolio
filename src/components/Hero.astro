---
import { Image } from 'astro:assets';
import heroImage from '../assets/hero.svg';
---

<section
    class='max-w-7xl mx-auto px-4 py-16 md:py-24 lg:min-h-screen flex flex-col justify-center items-center text-white'
>
    <!-- Main Content -->
    <div class='max-w-4xl mx-auto text-center space-y-8'>
        <div class='space-y-6'>
            <h1 class='text-4xl md:text-5xl lg:text-7xl font-bold tracking-tight'>
                Nowoczesne
                <span
                    class='text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-600'
                >
                    Strony Internetowe
                </span>
            </h1>

            <p class='text-lg md:text-xl lg:text-2xl text-gray-300 max-w-2xl mx-auto'>
                Tworzymy strony, które nie tylko wyróżniają się na tle konkurencji, ale przede
                wszystkim realizują Twoje cele biznesowe.
            </p>
        </div>

        <!-- CTA Buttons -->
        <div class='flex flex-col sm:flex-row gap-4 justify-center pt-4'>
            <a
                href='#oferta'
                class='px-8 py-3 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg font-semibold
                      hover:opacity-90 transition-opacity text-lg'
            >
                Zobacz ofertę
            </a>
            <a
                href='#kontakt'
                class='px-8 py-3 bg-white bg-opacity-10 rounded-lg font-semibold
                      hover:bg-opacity-20 transition-all text-lg'
            >
                Skontaktuj się
            </a>
        </div>

        <!-- Hero Image -->
        <div class='relative mt-12'>
            <div class='absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-xl'>
            </div>
            <Image
                src={heroImage}
                alt='Modern website development'
                class='w-full max-w-4xl mx-auto rounded-xl'
            />
        </div>
    </div>
</section>

<header class='fixed w-full z-50 bg-slate-900/80 backdrop-blur-md'>
    <nav class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
        <div class='flex items-center justify-between h-16'>
            {/* Logo */}
            <div class='flex-shrink-0'>
                <a href='#' class='text-white font-bold text-xl'>Kris Websites</a>
            </div>

            {/* Desktop Navigation */}
            <div class='hidden md:flex md:items-center md:space-x-8'>
                <a
                    href='#strony-wizytowki'
                    class='text-gray-300 hover:text-white transition-colors duration-300 text-sm font-medium'
                >
                    Strony Wizytówki
                </a>
                <a
                    href='#strony-katalogowe'
                    class='text-gray-300 hover:text-white transition-colors duration-300 text-sm font-medium'
                >
                    Strony Katalogowe
                </a>
                <a
                    href='#landing-page'
                    class='text-gray-300 hover:text-white transition-colors duration-300 text-sm font-medium'
                >
                    Landing Page
                </a>
                <a
                    href='#blog'
                    class='text-gray-300 hover:text-white transition-colors duration-300 text-sm font-medium'
                >
                    Blog
                </a>
                <a
                    href='#sklep'
                    class='text-gray-300 hover:text-white transition-colors duration-300 text-sm font-medium'
                >
                    Sklep
                </a>
            </div>

            {/* Contact Button */}
            <div class='hidden md:block'>
                <a
                    href='#kontakt'
                    class='bg-gradient-to-r from-blue-600 to-purple-600 text-white px-4 py-2 rounded-lg
                        hover:opacity-90 transition-opacity duration-300 text-sm font-medium'
                >
                    Kontakt
                </a>
            </div>

            {/* Mobile menu button */}
            <div class='md:hidden'>
                <button
                    type='button'
                    id='mobile-menu-button'
                    class='text-gray-300 hover:text-white p-2'
                >
                    <span class='sr-only'>Open menu</span>
                    <svg class='h-6 w-6' fill='none' viewBox='0 0 24 24' stroke='currentColor'>
                        <path
                            stroke-linecap='round'
                            stroke-linejoin='round'
                            stroke-width='2'
                            d='M4 6h16M4 12h16M4 18h16'
                        >
                        </path>
                    </svg>
                </button>
            </div>
        </div>

        {/* Mobile Navigation */}
        <div class='hidden md:hidden' id='mobile-menu'>
            <div class='px-2 pt-2 pb-3 space-y-1'>
                <a
                    href='#strony-wizytowki'
                    class='block px-3 py-2 rounded-md text-white font-medium hover:bg-slate-800'
                >
                    Strony Wizytówki
                </a>
                <a
                    href='#strony-katalogowe'
                    class='block px-3 py-2 rounded-md text-white font-medium hover:bg-slate-800'
                >
                    Strony Katalogowe
                </a>
                <a
                    href='#landing-page'
                    class='block px-3 py-2 rounded-md text-white font-medium hover:bg-slate-800'
                >
                    Landing Page
                </a>
                <a
                    href='#blog'
                    class='block px-3 py-2 rounded-md text-white font-medium hover:bg-slate-800'
                >
                    Blog
                </a>
                <a
                    href='#sklep'
                    class='block px-3 py-2 rounded-md text-white font-medium hover:bg-slate-800'
                >
                    Sklep
                </a>
                <a
                    href='#kontakt'
                    class='block px-3 py-2 rounded-md text-white font-medium bg-gradient-to-r
                        from-blue-600 to-purple-600 hover:opacity-90'
                >
                    Kontakt
                </a>
            </div>
        </div>
    </nav>
</header>

<script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    }

    // Close mobile menu when clicking on a link
    const mobileLinks = mobileMenu?.querySelectorAll('a');
    mobileLinks?.forEach((link) => {
        link.addEventListener('click', () => {
            mobileMenu?.classList.add('hidden');
        });
    });
</script>
